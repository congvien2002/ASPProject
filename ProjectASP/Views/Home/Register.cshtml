@model ProjectASP.Models.Account

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <ul class="breadcrumb">
        <li>
            <a href="" ~/Home" title="Back to the frontpage">
            Trang Chủ
            </a>
        </li>
        <li>
            <a href="#"><span>Đăng Ký</span></a>
        </li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            <h1>Đăng Ký Tài Khoản</h1>
            <form method="post" asp-action="Register" accept-charset="UTF-8">
                <div>
                    <fieldset id="account" class="form-horizontal">
                        <legend>Vui lòng ghi đầy đủ thông tin dưới đây</legend>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="AccountName" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                <input asp-for="AccountName" class="form-control" />
                                <span asp-validation-for="AccountName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="Email" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="Phone" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="Password" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="Birthday" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                    <input asp-for="Birthday" class="form-control" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-2">
                                <label asp-for="Address" class="control-label"></label>
                            </div>
                            <div class="col-sm-10">
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
</fieldset>
                    <div class="submit">
                        <button name="submitcreate" id="button-account" type="submit" class="btn btn-primary">
                            <span>
                                <i class="fa fa-user left"></i>
                                Đăng ký
                            </span>
                        </button>
                        &nbsp;
                        hoặc <a class="btn-acct" href="~/Home">Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

