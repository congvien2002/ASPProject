@model ProjectASP.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminTemplate.cshtml";
}

<h2 class="text-center">Thêm mới sản phẩm</h2>

<hr />
<div class="row justify-content-center">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductImage" class="control-label"></label>
                        <input type="file" asp-for="ProductImage" class="form-control" />
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalePrice" class="control-label"></label>
                        <input asp-for="SalePrice" class="form-control" />
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DayMaking" class="control-label"></label>
                        <input asp-for="DayMaking" class="form-control" />
                        <span asp-validation-for="DayMaking" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MadeIn" class="control-label"></label>
                        <input asp-for="MadeIn" class="form-control" />
                        <span asp-validation-for="MadeIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.DisplayNameFor(model => model.Status)
                            </label>
                            <input asp-for="Status" type="radio" value="true" /> Còn hàng
                            <input asp-for="Status" type="radio" value="false" /> Hết hàng
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryID" class="control-label"></label>
                        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        <a class="btn btn-primary" asp-action="Index">Quay lại</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

