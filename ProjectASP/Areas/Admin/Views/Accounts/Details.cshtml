@model ProjectASP.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminTemplate.cshtml";
}

<h2 class="text-center">Chi tiết tài khoản</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.AccountName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Phone)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Birthday)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Birthday)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DayCreated)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.DayCreated)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <td>
                        @if (Model.Role)
                        {
                            <p>Quản trị</p>
                        }
                        else
                        {
                            <p>Người dùng</p>
                        }
                    </td>
                </tr>
            </table>
            <div>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.AccountID">Chỉnh sửa</a> |
                <a class="btn btn-primary" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>
</div>

