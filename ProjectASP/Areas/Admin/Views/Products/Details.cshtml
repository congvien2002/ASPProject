@model ProjectASP.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminTemplate.cshtml";
}

<h2 class="text-center">Chi tiết sản phẩm</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <img src="~/images/products/@Model.ProductImage" alt="@Model.ProductName" width="100%" />
            <br />
            <table class="table table-hover">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <td>@Html.DisplayFor(model => model.ProductName)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <td>@string.Format("{0:0,00}", Model.Price) VNĐ</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SalePrice)</th>
                    <td>@string.Format("{0:0,00}", Model.SalePrice) VNĐ</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DayMaking)</th>
                    <td>@Model.DayMaking.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.MadeIn)</th>
                    <td>@Html.DisplayFor(model => model.MadeIn)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <td>
                        @if (Model.Status)
                        {
                            <p>Còn hàng</p>
                        }
                        else
                        {
                            <p>Hết hàng</p>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Danh Mục</th>
                    <td>@Html.DisplayFor(model => model.Category.CategoryName)</td>
                </tr>
            </table>
            <div class="m-auto">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ProductID">Chỉnh sửa</a>
                <a class="btn btn-primary" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>
</div>
