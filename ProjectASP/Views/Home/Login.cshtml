@model ProjectASP.Models.Login

@{
    ViewData["Title"] = "Login";
}

<!--My Account Content Area Start-->
<div class="container">


    <!-- Breadcumb area start -->
    <ul class="breadcrumb">
        <li>
            <a href="#" title="Quay lại trang chủ">
                <font style="vertical-align: inherit;">
                    <font style="vertical-align: inherit;">
                        Nhà
                    </font>
                </font>
            </a>
        </li>

        <li>
            <a href="#account/login">
                <span>
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">Tài khoản</font>
                    </font>
                </span>
            </a>
        </li>

    </ul>
    <!--End Breadcumb area -->


    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="row">

                <div class="alert alert-danger" style="display:none;">
                    <i class="fa fa-exclamation-circle"></i>
                    Warning: No match for E-Mail Address and/or Password.
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="well">
                        <h2>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    Khách hàng
                                    mới
                                </font>
                            </font>
                        </h2>
                        <p>
                            <strong>
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Đăng ký
                                        tài khoản
                                    </font>
                                </font>
                            </strong>
                        </p>
                        <p>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    Bằng cách tạo
                                    tài khoản, bạn sẽ có thể mua sắm nhanh hơn, cập nhật trạng thái của đơn hàng và theo dõi các
                                    đơn hàng bạn đã thực hiện trước đó.
                                </font>
                            </font>
                        </p>
                        <br>
                        <a href="#" id="button-account"
                           class="btn btn-primary">
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">Tiếp tục</font>
                            </font>
                        </a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="well">
                        <h2>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    Phản hồi khách
                                    hàng
                                </font>
                            </font>
                        </h2>
                        <p>
                            <strong>
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Tôi là
                                        một khách hàng cũ
                                    </font>
                                </font>
                            </strong>
                        </p>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form method="post" asp-action="CheckLogin" accept-charset="UTF-8">
                            <div class="note form-success" id="resetSuccess" style="display:none;">
                                We've sent you an email with a link to update your password.
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="customer_email">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">E-mail</font>
                                    </font>
                                </label>
                                <input type="text" placeholder="E-mail or Phone" class="form-control" asp-for="Account">
                            </div>
                            <span asp-validation-for="Account" class="text-danger"></span>

                            <div class="form-group">
                                <label class="control-label" for="customer_password">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            Mật
                                            khẩu
                                        </font>
                                    </font>
                                </label>
                                <input class="form-control" type="password" placeholder="Mật khẩu" asp-for="Password">
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div>
                                <a rel="nofollow" href="#account/login#"
                                   onclick="showRecoverPasswordForm();return false;">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            Quên mật
                                            khẩu?
                                        </font>
                                    </font>
                                </a>
                            </div>
                            <p class="submit">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        <input type="submit" value="Đăng nhập " class="btn btn-primary">
                                    </font>
                                </font><font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        hoặc
                                    </font>
                                </font><a class="btn-acct" href="~/Home">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            quay lại cửa
                                            hàng
                                        </font>
                                    </font>
                                </a>
                            </p>
                        </form>

                        <div id="recover_password" style="display: none;">

                            <h3>Reset your password</h3>
                            <p>We will send you an email to reset your password.</p>

                            <form method="post" asp-action="SendEmail" accept-charset="UTF-8">
                                <div class="form-group">
                                    <label for="recover-email">Email</label>
                                    <input type="text" name="email" asp-all-route-data="email" class="form-control" id="recover-email"
                                           placeholder="Email">

                                    <p class="submit lost-password form-group">
                                        <button class="btn btn-primary" name="SubmitLogin" id="button-account"
                                                type="submit">
                                            <span>Submit</span>
                                        </button>
                                        or <a class="btn-acct" asp-action="Login" >Cancel</a>
                                    </p>
                                </div>
                            </form>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of My Account Content Area-->

<script>
    /*
      Show/hide the recover password form when requested.
    */
    function showRecoverPasswordForm() {
        document.getElementById('recover_password').style.display = 'block';
        document.getElementById('customer_login').style.display = 'none';
    }

    function hideRecoverPasswordForm() {
        document.getElementById('recover_password').style.display = 'none';
        document.getElementById('customer_login').style.display = 'block';
    }

    // Allow deep linking to the recover password form
    if (window.location.hash == '#recover') {
        showRecoverPasswordForm()
    }

    // reset_success is only true when the reset form is

</script>